{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Broadband Penetration by country",
  "width": 300,
  "height": 200,
  "params": [
    {
      "name": "projection",
      "value": "equalEarth",
      "bind": {
        "input": "select",
        "options": [
          "equalEarth",
          "equirectangular",
          "gnomonic",
          "mercator",
          "naturalEarth1",
          "orthographic",
          "stereographic",
          "transverseMercator"
        ],
        "labels": [
          "equalEarth",
          "equirectangular",
          "gnomonic",
          "mercator",
          "naturalEarth1",
          "orthographic",
          "stereographic",
          "transverseMercator"
        ]
      }
    },
    {
      "name": "Years",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2008,
        "max": 2019,
        "step": 1,
        "name": "Years : "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/zmingpan/test/master/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [

    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/zmingpan/test/master/data/broadband-penetration-by-country.csv"
        },
        "key": "Entity",
        "fields": ["Fixed_broadband_subscriptions_per_100_people","Year"]
      }
    },
    {"calculate": "datum.Fixed_broadband_subscriptions_per_100_people", "as": "broadband_sub"},
    {"filter":"datum.Year == Years"}
  ],
  "projection": {"type": {"expr": "projection"}},
  "mark": {"type": "geoshape","stroke": "white"},
  "encoding": {
    "color": {
      "field": "broadband_sub",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "title":"per 100 people"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "quantitative"},
      {"field": "broadband_sub", "type": "quantitative"}
    ]
  }
}